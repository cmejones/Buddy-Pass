<div class="card">

    <div class="header">
        <h4 class="card-title"><%= user.firstName %> <%= user.lastName %></h4>
        <p class="card-text text-left"><%= user.email %></p>
        <p class="card-text text-left">Department: <%= user.department %></p>
        <p class="card-text text-left">Title: <%= user.title %></p>
        <p class="card-text text-left">Bio: <%= user.bio %></p>
        <p class="card-text text-left">My Strengths: <%= user.strengths%></p>
        <p class="card-text text-left">Areas for Improvement: <%= user.weaknesses %></p>
        <p class="card-text text-left">What I want to learn: <%= user.goals %></p>
    </div>
    <div class="photo">

    </div>
    <hr>
    <div class="content">
        <a href="/profile/edit" class="btn btn-primary">update</a>
    </div>
</div>
